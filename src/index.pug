        .services
            .container
                ul.row
                    li.col
                        a(href="#")
                            img(src="img/ic_1.svg", alt="proj")
                            p Услуги проектирования
                    li.col
                        a(href="#")
                            img(src="img/ic_2.svg", alt="build")
                            p Строительно-монтажные работы
                    li.col
                        a(href="#")
                            img(src="img/ic_3.svg", alt="expert")
                            p Экспертная деятельность
                    li.col
                        a(href="#")
                            img(src="img/ic_4.svg", alt="tech")
                            p Техническое обслуживание
                    li.col
                        a(href="#")
